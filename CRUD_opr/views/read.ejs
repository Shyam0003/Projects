<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white">
    <div class="w-full h-full pl-5 pt-5">
        <a href="/" class="text-blue-500">Back to Home</a>
        <h1 class="text-3xl tracking-tighter mb-3 pt-4">All Users</h1>

        <div class="users flex gap-3 flex-wrap">
            <% if(users.length>0) { %>
                <% users.forEach(function(user) { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-700">
                            <img src="<%= user.image %>" alt="User Image" class="w-full h-full object-cover">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter">
                            <%= user.name %>
                        </h3>
                        <h5 class="text-zinc-500">
                            <%= user.email %>
                        </h5>
                        <div class="flex gap-3 mt-10">
                            <a href="/edit/<%= user._id %>" class="text-zinc-400">Edit User</a>
                            <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
                        </div>
                    </div>
                    <% }); %>

                        <% } else { %>
                            <h3 class="text-zinc-500">no user yet</h3>
                            <% }%>
        </div>
    </div>
</body>

</html>

